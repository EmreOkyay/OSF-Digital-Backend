extends layout

block content
  h2 MAIN CATEGORY NAME
  p Category description: This is the place holder for main category description
  br
  h3 Subcategories
  br
  .subcategories
    ul 
      each val in categories
        if val.image == nullData
          continue
        else
          .oneSubCategorie.p-3.mb-3.bg-dark.text-white.rounded
            h3.text-center= val.name
            hr
            p= val.page_title
            img(src='images/' + val.image)
            li= val.page_description
            a(href='/categories/' + val.id)
              input(type='button' value='View Products')
            br
