extends layout 

block content 
    p Hello
    p #{productId}
    ul
      each val in product 
        if val.image == nullData 
          continue
        else if val.id == productId
          .oneSubCategorie.p-3.mb-3.bg-dark.text-white.rounded
            h3.text-center= val.name
            hr
            p= val.page_title
            img(src='images/' + val.image)
            li= val.page_description
            a(href='/categories/' + val.id)
              input(type='button' value='View Products')
            br